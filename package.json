{
	"name": "karaudio-admin",
	"version": "0.0.0",
	"scripts": {
		"ng": "ng",
		"start": "ng serve",
		"build": "ng build",
		"watch": "ng build --watch --configuration development",
		"test": "ng test",
		"serve:ssr:karaudio-admin": "node dist/karaudio-admin/server/server.mjs",
		"lint": "ng lint",
		"lint:styles": "stylelint \"src/**/*.{scss}\"",
		"lint:styles:fix": "stylelint \"src/**/*.{scss}\" --fix",
		"format": "prettier --write \"**/*.{js,ts,json,scss,html,md}\"",
		"check-format": "prettier --check \"**/*.{js,ts,json,scss,html,md}\"",
		"prepare": "husky"
	},
	"private": true,
	"packageManager": "npm@11.1.0",
	"dependencies": {
		"@angular/cdk": "^21.0.5",
		"@angular/common": "^21.0.0",
		"@angular/compiler": "^21.0.0",
		"@angular/core": "^21.0.0",
		"@angular/forms": "^21.0.0",
		"@angular/material": "^21.0.5",
		"@angular/platform-browser": "^21.0.0",
		"@angular/platform-server": "^21.0.0",
		"@angular/router": "^21.0.0",
		"@angular/ssr": "^21.0.4",
		"@tailwindcss/postcss": "^4.1.18",
		"express": "^5.1.0",
		"postcss": "^8.5.6",
		"rxjs": "~7.8.0",
		"tailwindcss": "^4.1.18",
		"tslib": "^2.3.0"
	},
	"devDependencies": {
		"@angular/build": "^21.0.4",
		"@angular/cli": "^21.0.4",
		"@angular/compiler-cli": "^21.0.0",
		"@types/express": "^5.0.1",
		"@types/node": "^20.17.19",
		"angular-eslint": "21.1.0",
		"eslint": "^9.39.1",
		"eslint-config-prettier": "^10.1.8",
		"eslint-plugin-prettier": "^5.5.4",
		"husky": "^9.1.7",
		"jsdom": "^27.1.0",
		"lint-staged": "^16.2.7",
		"prettier": "^3.7.4",
		"stylelint": "^16.26.1",
		"stylelint-config-standard-scss": "^16.0.0",
		"stylelint-order": "^7.0.0",
		"stylelint-scss": "^6.13.0",
		"typescript": "~5.9.2",
		"typescript-eslint": "8.47.0",
		"vitest": "^4.0.8"
	},
	"lint-staged": {
		"*.{js,ts,html,scss,json,md}": [
			"prettier --check"
		],
		"*.ts": [
			"eslint"
		],
		"*.scss": [
			"stylelint"
		]
	}
}
